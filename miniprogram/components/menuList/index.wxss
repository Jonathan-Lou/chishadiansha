.menus {
  height: 600rpx;
  overflow: scroll;
}
.menu {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 24rpx;
  margin: 12rpx 24rpx 0;
  border-radius: 12rpx;
  background-color:antiquewhite;
}

.actions {
  display: flex;
}

.actions button {
  font-size: 24rpx !important;
  margin: 0 6rpx;
}

.loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-size: 40rpx;
  font-weight: bold;
}

.createMenuView {
  margin-top: 24rpx;
  background-color:antiquewhite !important;
}