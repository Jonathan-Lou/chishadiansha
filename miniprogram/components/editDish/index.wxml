<!--index.wxml-->
<view class="container">
  <view class="photo" bind:tap="takePhoto">
    <view wx:if="{{!photoSrc}}" class="takePhoto">点击上传图片</view>
    <image wx:if="{{photoSrc}}" class="photoImg" name="photo" mode="aspectFit" src="{{photoSrc}}"></image>
    
  </view>
  <form catchsubmit="formSubmit" catchreset="formReset">
  <view class="name">
    菜品名称：<input class="input-name" name="name" auto-focus placeholder="输入菜品名称" />
  </view>
  <view class="type">
    菜品类型：<input class="input-type" name="type" auto-focus placeholder="输入菜品类型(蔬菜、荤菜等)" />
  </view>
  <button class="submitBtn" style="margin: 30rpx 0" type="primary" formType="submit">确认</button>
  </form>
</view>