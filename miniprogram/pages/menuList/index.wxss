/**index.wxss**/

page {
  /* padding-top: 54rpx; */
  padding-bottom: 60rpx;
  background-color: #fff;
}

.container {
  width: 100%;
  height: 100%;
  align-items: center;
}

.header {
  position: relative;
  height: 300rpx;
  background-color:peachpuff;
}

.banner {
  position: absolute;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  height: 60px;
  width: 80%;
  border-radius: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  bottom: -50rpx;
  background-color: peru;
}

.banner-title {
  font-size: 32rpx;
}

.banner-tip {
  font-size: 24rpx;
}

.banner-btn {
  font-weight: bold;
}

.floor {
  display: flex;
}

.floor-content {
  margin-top: 100rpx;
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: center;
}

.floor-content:nth-child(2) {
  border-left: 2rpx solid #f1f1f1;
}

.floor-title {
  font-size: 40rpx;
  font-weight: bold;
}

.floor-subTitle {
  margin-top: -12rpx;
  margin-bottom: 20rpx;
  font-size: 20rpx;
  color: orange;
}

.floor-img {
  width: 160rpx;
  height: 160rpx;
  background-color: yellowgreen;

}

.help {
  position: absolute;
  bottom:0;
}