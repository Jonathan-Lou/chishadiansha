.page_container {
  background-color: #f5f5f5;
  height: 100vh;
  font-family: PingFang SC;
}

.top_bg {
  height: 120rpx;
  background-color: #fff;
}

.main_content {
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  min-height: calc(100vh - 120rpx);
  position: relative;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999;
  font-size: 28rpx;
}

.userinfo_container {
  display: flex;
  align-items: center;
  gap: 40rpx;
  position: absolute;
  top: -60rpx;
  padding: 0 60rpx;
  width: calc(100% - 120rpx);
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
}

.username {
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  max-width: calc(100% - 168rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.settings_container {
  position: relative;
  top: 150rpx;
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.setting_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
}

.left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.setting_icon {
  width: 40rpx;
  height: 40rpx;
}

.arrow_icon {
  width: 30rpx;
  height: 30rpx;
}

.contact-button {
  padding: 0;
  margin: 0;
  width: auto;
  background: none;
  font-weight: 400;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.9);
  line-height: 40rpx;
  text-align: left;
}

.contact-button::after {
  border: none;
}

.button-hover {
  background-color: transparent;
}

.setting_text {
  color: rgba(0, 0, 0, 0.9);
}

.container, .userinfo, .nickname {
  display: none;
}