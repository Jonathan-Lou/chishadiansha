/**index.wxss**/

page {
  /* padding-top: 54rpx; */
  padding-bottom: 60rpx;
  background-color: #fff;
}

.container {
  width: 100%;
  height: 100%;
  align-items: center;
}

.header {
  position: relative;
  height: 292rpx;
  width: 100%;
  background-image: url('https://6368-chishadiansha-ppe-3ems5xeb1803ad-1308342340.tcb.qcloud.la/pic/topBanner.png?sign=90d7bbff76e43993cc6d2cfc1aa5bed0&t=1736590612');
  background-size: contain; /* 使背景图像覆盖整个元素 */
  background-position: center; /* 使背景图居中 */
  background-repeat: no-repeat;
}

.banner {
  position: absolute;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  height: 150rpx;
  width: 100%;
  border-radius: 50rpx;
  left: 50%;
  transform: translateX(-50%);
  bottom: -40rpx;
  background-image:url('https://6368-chishadiansha-ppe-3ems5xeb1803ad-1308342340.tcb.qcloud.la/pic/userBanner.png?sign=18735657c8ddea07309cc84c23d2cbfd&t=1736590638');
  background-size: cover; /* 使背景图像覆盖整个元素 */
  background-position: center; /* 使背景图居中 */
}

.banner-title {
  font-size: 32rpx;
  color:#382600;
  font-weight: 600;
}

.banner-subtitle {
  font-size: 16rpx;
}

.banner-tip {
  font-size: 24rpx;
}

.banner-btn {
  font-weight: bold;
}

.floor {
  display: flex;
}

.floor-content {
  margin-top: 100rpx;
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: center;
}

.floor-content:nth-child(2) {
  border-left: 2rpx solid #f1f1f1;
}

.floor-title {
  font-size: 40rpx;
  font-weight: bold;
}

.floor-subTitle {
  margin-top: -12rpx;
  margin-bottom: 20rpx;
  font-size: 20rpx;
  color: orange;
}

.floor-img {
  width: 160rpx;
  height: 160rpx;
  background-color: yellowgreen;

}

.enterMenu {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 60rpx 18rpx 0;
  height: 318rpx;
  border-radius: 20rpx;
  font-size: 48rpx;
  color: #fff;
  background-image: url('https://6368-chishadiansha-ppe-3ems5xeb1803ad-1308342340.tcb.qcloud.la/pic/enter.png?sign=2ac5e924002b4ebcdae1b2ec9e237bd6&t=1736590693');
  background-size: cover; /* 使背景图像覆盖整个元素 */
  background-position: center; /* 使背景图居中 */
}

.bold {
  font-weight: 600;
}